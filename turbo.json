{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": { "dependsOn": ["^build"], "outputs": ["dist/**", ".next/**"] },
      "dev": { "cache": false, "persistent": true },
      "lint": { "dependsOn": ["^lint"] },
      "test": { "dependsOn": ["^test"] },
      "db:migrate": { "cache": false }
    }
  }